<!-- Vertical Alignment  -->


<div class="container">

  <div class="row align-content-center">  <!-- start , center , end   --> 
    <div class="col align-self-start">1</div>  <!-- * - -    -->
    <div class="col align-self-center">2</div>  <!-- - * -    -->
    <div class="col align-self-end"3></div>  <!-- - - *    -->
  </div>

</div>





<!-- Horizontal Alignment  -->   <!--   <-  ->   -->

<div class="container">

  <div class="row justify-content-around"> <!-- around , between ,evenly  -->
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
  </div>

</div>




